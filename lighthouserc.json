{
    "ci": {
        "collect": {
            "url": [
                "http://localhost:3000"
            ],
            "numberOfRuns": 3,
            "settings": {
                "preset": "desktop"
            }
        },
        "collect-mobile": {
            "url": [
                "http://localhost:3000"
            ],
            "numberOfRuns": 2,
            "settings": {
                "preset": "mobile",
                "throttling": {
                    "rttMs": 150,
                    "throughputKbps": 1638.4,
                    "cpuSlowdownMultiplier": 4
                }
            }
        },
        "assert": {
            "preset": "lighthouse:recommended",
            "assertions": {
                "categories:performance": [
                    "warn",
                    {
                        "minScore": 0.7
                    }
                ],
                "categories:accessibility": [
                    "warn",
                    {
                        "minScore": 0.7
                    }
                ],
                "categories:best-practices": [
                    "warn",
                    {
                        "minScore": 0.7
                    }
                ],
                "categories:seo": [
                    "warn",
                    {
                        "minScore": 0.7
                    }
                ],
                "first-contentful-paint": [
                    "warn",
                    {
                        "maxNumericValue": 2000
                    }
                ],
                "largest-contentful-paint": [
                    "warn",
                    {
                        "maxNumericValue": 2500
                    }
                ],
                "cumulative-layout-shift": [
                    "warn",
                    {
                        "maxNumericValue": 0.1
                    }
                ],
                "total-blocking-time": [
                    "warn",
                    {
                        "maxNumericValue": 300
                    }
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}